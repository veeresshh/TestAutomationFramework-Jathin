<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">

		<PatternLayout  pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %level %logger::%M::%L  %msg %n" > //%M - Method Name and %L - Line Number
		
		</PatternLayout>
				
		</Console>

		<File name="FileLogger" fileName="logs/Automation.log" append="false">   //Append - Mentioned Not to Rewrite Old Logs

		<PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %level %logger %msg %n">
		
		</PatternLayout >
		
		</File>
		
	</Appenders>
	
	<Loggers>
	
		<Root level="info">
		
			<AppenderRef ref="Console"></AppenderRef>
			<AppenderRef ref="FileLogger"></AppenderRef>
			
		</Root>

	</Loggers>


</Configuration>